@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1 class="greyFont">All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">Add new user</a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">User Id: @user.Id</div>
            <div class="card-body">@user.FirstName</div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>

                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="" onclick="confirmDelete('@user.Id',false)">No</a>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="" onclick="confirmDelete('@user.Id', true)">Delete</a>
                    </span>

                </form>
            </div>
        </div>

    }
}
else
{
    <div class="card">
        <div class="card-header">No Users Created yet</div>
        <div class="card-body">
            <h5 class="card-title greyFont">Use the button below to create a user</h5>
            <a class="link002" style="width:auto" asp-controller="Account" asp-action="Register">Add</a>
        </div>
    </div>

}

@section Scripts
{
    <script src="~/js/CustomScript.js"></script>
}