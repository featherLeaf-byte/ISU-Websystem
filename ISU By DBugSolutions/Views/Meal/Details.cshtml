}

<img class="mb-3" src="~/Images/meal-header.png" alt="Creche List" width="300" />
<hr />
<div>
    <h4>Meal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
