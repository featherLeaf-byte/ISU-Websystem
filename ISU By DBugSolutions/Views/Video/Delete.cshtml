@model ISU_By_DBugSolutions.Models.Video

@{
    ViewData["Title"] = "Video";
}

<img class="mb-3" src="~/Images/videos-header.png" alt="Videos" width="300" />

<div class="alert alert-danger alert-dismissible fade show" role="alert"><strong>Warning!</strong> Deleted records cannot be recovered<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>


<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VideoId" />
        <a asp-action="Index"><img src="~/Images/back-icon.png" alt="back" style="width:35px;" class="mr-1" /></a>
        <input type="submit" value="Delete" class="btn btn-submit-1" />

    </form>
</div>
