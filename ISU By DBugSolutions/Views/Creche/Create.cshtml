@model ISU_By_DBugSolutions.Models.Creche

@{
    ViewData["Title"] = "Creche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<img class="mb-3" src="~/Images/creche-header-2.png" alt="Creche" width="300" />

<div class="alert alert-secondary alert-dismissible fade show" role="alert"> Complete form and submit to add creche.<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseNo" class="control-label"></label>
                <input asp-for="HouseNo" class="form-control" />
                <span asp-validation-for="HouseNo" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetName" class="control-label"></label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuburbName" class="control-label"></label>
                <input asp-for="SuburbName" class="form-control" />
                <span asp-validation-for="SuburbName" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceName" class="control-label"></label>
                <select asp-for="ProvinceName" class="form-control" asp-items="@(new SelectList(@ViewBag.listOfProvs,"ProvinceName","ProvinceName"))">
                    <option value="" selected disabled>--Select--</option>
                </select>
                <span asp-validation-for="ProvinceName" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index"><img src="~/Images/back-icon.png" alt="back" style="width:35px;" class="mr-1" /></a>
                <input type="submit" value="Confirm" class="btn btn-submit-1" />

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
